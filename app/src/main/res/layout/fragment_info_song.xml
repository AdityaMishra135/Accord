<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/contrast_colorBackground"
        app:liftOnScroll="false">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingtoolbar"
            style="?attr/collapsingToolbarLayoutMediumStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_app_bar_height"
            android:background="@color/contrast_colorBackground"
            app:collapsedTitleTextAppearance="@style/TextAppearance.App.TitleLarge"
            app:collapsedTitleTextColor="@color/contrast_colorOnSurface"
            app:contentScrim="@android:color/transparent"
            app:expandedTitleMarginStart="24dp"
            app:expandedTitleTextAppearance="@style/TextAppearance.App.HeadlineLarge"
            app:expandedTitleTextColor="@color/contrast_colorOnSurface"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:title="@string/details">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/contrast_colorBackground"
                android:elevation="0dp"
                android:paddingStart="6dp"
                android:paddingEnd="8dp"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:navigationIconTint="@color/contrast_themeColor" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:dividerColor="@color/contrast_colorBackgroundContainer"
            app:dividerThickness="0.5dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="28dp"
                android:fontFamily="sans-serif"
                android:text="@string/album_cover"
                android:textColor="@color/contrast_colorOnSurface"
                android:textFontWeight="700"
                android:textSize="17sp"
                tools:targetApi="p" />

            <ImageView
                android:id="@+id/album_cover"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default_cover" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:enabled="false"
                android:text="@string/dialog_edit_metadata"
                android:visibility="gone"
                app:icon="@drawable/ic_edit" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="18dp"
                app:dividerColor="@color/contrast_colorBackgroundContainer"
                app:dividerThickness="0.5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="@string/dialog_title"
                    android:textColor="@color/contrast_colorOnSurface"
                    android:textFontWeight="700"
                    android:textSize="17sp"
                    tools:targetApi="p" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:text="@string/unknown_title"
                    android:textColor="?colorOnSurface"
                    android:textFontWeight="500"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    tools:targetApi="p" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="@string/dialog_artist"
                    android:textColor="@color/contrast_colorOnSurface"
                    android:textFontWeight="700"
                    android:textSize="17sp"
                    tools:targetApi="p" />

                <TextView
                    android:id="@+id/artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:text="@string/unknown_artist"
                    android:textColor="?colorOnSurface"
                    android:textFontWeight="500"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    tools:targetApi="p" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="@string/dialog_album"
                    android:textColor="@color/contrast_colorOnSurface"
                    android:textFontWeight="700"
                    android:textSize="17sp"
                    tools:targetApi="p" />

                <TextView
                    android:id="@+id/album"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:text="@string/unknown_album"
                    android:textColor="?colorOnSurface"
                    android:textFontWeight="500"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    tools:targetApi="p" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="@string/dialog_album_artist"
                    android:textColor="@color/contrast_colorOnSurface"
                    android:textFontWeight="700"
                    android:textSize="17sp"
                    tools:targetApi="p" />

                <TextView
                    android:id="@+id/album_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:text="@string/unknown_artist"
                    android:textColor="?colorOnSurface"
                    android:textFontWeight="500"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    tools:targetApi="p" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="@string/dialog_disc_number"
                    android:textColor="@color/contrast_colorOnSurface"
                    android:textFontWeight="700"
                    android:textSize="17sp"
                    tools:targetApi="p" />

                <TextView
                    android:id="@+id/disc_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:textColor="?colorOnSurface"
                    android:textFontWeight="500"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    tools:targetApi="p"
                    tools:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="@string/dialog_track_number"
                    android:textColor="@color/contrast_colorOnSurface"
                    android:textFontWeight="700"
                    android:textSize="17sp"
                    tools:targetApi="p" />

                <TextView
                    android:id="@+id/track_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:textColor="?colorOnSurface"
                    android:textFontWeight="500"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    tools:targetApi="p"
                    tools:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="@string/dialog_genre"
                    android:textColor="@color/contrast_colorOnSurface"
                    android:textFontWeight="700"
                    android:textSize="17sp"
                    tools:targetApi="p" />

                <TextView
                    android:id="@+id/genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:text="@string/unknown_genre"
                    android:textColor="?colorOnSurface"
                    android:textFontWeight="500"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    tools:targetApi="p" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="@string/dialog_year"
                    android:textColor="@color/contrast_colorOnSurface"
                    android:textFontWeight="700"
                    android:textSize="17sp"
                    tools:targetApi="p" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:text="@string/unknown_year"
                    android:textColor="?colorOnSurface"
                    android:textFontWeight="500"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    tools:targetApi="p" />

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="18dp"
                app:dividerColor="@color/contrast_colorBackgroundContainer"
                app:dividerThickness="0.5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="@string/dialog_duration"
                    android:textColor="@color/contrast_colorOnSurface"
                    android:textFontWeight="700"
                    android:textSize="17sp"
                    tools:targetApi="p" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:textColor="?colorOnSurface"
                    android:textFontWeight="500"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    tools:targetApi="p" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="@string/dialog_mime"
                    android:textColor="@color/contrast_colorOnSurface"
                    android:textFontWeight="700"
                    android:textSize="17sp"
                    tools:targetApi="p" />

                <TextView
                    android:id="@+id/mime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:textColor="?colorOnSurface"
                    android:textFontWeight="500"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    tools:targetApi="p" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="@string/dialog_path"
                    android:textColor="@color/contrast_colorOnSurface"
                    android:textFontWeight="700"
                    android:textSize="17sp"
                    tools:targetApi="p" />

                <TextView
                    android:id="@+id/path"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:textColor="?colorOnSurface"
                    android:textFontWeight="500"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    tools:targetApi="p" />

            </LinearLayout>
